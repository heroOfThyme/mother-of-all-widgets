---
import Layout from '~/layouts/PageLayout.astro';
import Testimonials from '~/components/widgets/Testimonials.astro';
import TestimonialsCards from '~/components/widgets/testimonials/TestimonialsCards.astro';
import TestimonialsMinimal from '~/components/widgets/testimonials/TestimonialsMinimal.astro';
import TestimonialsMasonry from '~/components/widgets/testimonials/TestimonialsMasonry.astro';
import TestimonialsCarousel from '~/components/widgets/testimonials/TestimonialsCarousel.astro';

const metadata = {
  title: 'Testimonials Components Showcase',
};

// Sample testimonials data
const sampleTestimonials = [
  {
    testimonial: `The designs are not only visually appealing but also highly professional. The templates have saved me a significant amount of time while helping me make a lasting impression on my clients.`,
    name: 'Emily Kennedy',
    job: 'Front-end developer',
    image: {
      src: 'https://images.unsplash.com/photo-1618835962148-cf177563c6c0?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=930&q=80',
      alt: 'Emily Kennedy Image',
    },
  },
  {
    testimonial: `It beautifully showcases my work, with its clean and elegant design that lets my photographs shine. Customization was a breeze, even for a non-tech person like me.`,
    name: 'Sarah Hansen',
    job: 'Photographer',
    image: {
      src: 'https://images.unsplash.com/photo-1561406636-b80293969660?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=774&q=80',
      alt: 'Sarah Hansen Image',
    },
  },
  {
    testimonial: `I discovered these templates and I'm impressed by their variety and quality. They've helped me establish a consistent brand image across my marketing platforms.`,
    name: 'Mark Wilkinson',
    job: 'Small business owner',
    image: {
      src: 'https://images.unsplash.com/photo-1545167622-3a6ac756afa4?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=824&q=80',
      alt: 'Mark Wilkinson Image',
    },
  },
  {
    testimonial: `The customer support is outstanding and the templates are incredibly easy to customize. I was able to launch my website in just a few days.`,
    name: 'Jessica Chen',
    job: 'Marketing Manager',
    image: {
      src: 'https://images.unsplash.com/photo-1494790108755-2616c30a13ad?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=774&q=80',
      alt: 'Jessica Chen Image',
    },
  },
  {
    testimonial: `Perfect for startups like ours. The modern design and fast loading times have significantly improved our conversion rates.`,
    name: 'David Rodriguez',
    job: 'Startup Founder',
    image: {
      src: 'https://images.unsplash.com/photo-1472099645785-5658abf4ff4e?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=774&q=80',
      alt: 'David Rodriguez Image',
    },
  },
  {
    testimonial: `As a designer, I appreciate the attention to detail and the quality of the components. These templates save me hours of development time.`,
    name: 'Lisa Park',
    job: 'UI/UX Designer',
    image: {
      src: 'https://images.unsplash.com/photo-1438761681033-6461ffad8d80?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=774&q=80',
      alt: 'Lisa Park Image',
    },
